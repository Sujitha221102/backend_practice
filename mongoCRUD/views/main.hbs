<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD using MongoDb</title>
  </head>
  <body>
    <h1>CRUD using MongoDb</h1>
    {{message}}

    {{#if edit_id}}
      <h3>Edit</h3>
      <form action="/update_book/{{edit_id}}" method="POST">
        <label for="">Title</label>
        <input type="text" name="title" value="{{edit_book.title}}" /><br />
        <label for="">Author</label>
        <input type="text" name="author" value="{{edit_book.author}}" /><br />
        <input type="submit" />
      </form><br />

    {{else}}
      <h3>Create</h3>
      <form action="/store_book" method="POST">
        <label for="">Title</label>
        <input type="text" name="title" /><br />
        <label for="">Author</label>
        <input type="text" name="author" /><br />
        <input type="submit" />
      </form><br />

    {{/if}}

    <ul>
      {{#each books}}
        <li>{{this.title}}
          -
          {{this.author}}
          <a href="/?edit_id={{this._id}}">Edit</a><a href="/?delete_id={{this._id}}" onclick="return confirm('Are you sure you want to delete')">Delete</a></li>
      {{/each}}
    </ul>
  </body>
</html>